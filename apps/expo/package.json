{
	"name": "@pacto-chat/apps-expo",
	"version": "0.0.1",
	"main": "index.ts",
	"private": true,
	"type": "module",
	"scripts": {
		"start": "METRO_VERBOSE=1 expo start --clear",
		"start:debug": "METRO_VERBOSE=1 DEBUG=tamagui expo start --clear",
		"expo:add": "expo install",
		"______ Android ______": "Run and manage Android development",
		"android": "expo run:android --device",
		"android:clean": "cd android && ./gradlew clean",
		"______ iOS ______": "Run and manage iOS development",
		"ios": "expo run:ios --device",
		"ios:debug": "expo run:ios --device --configuration Debug",
		"ios:pods": "yarn dlx pod-install",
		"______ Web ______": "Run and manage Web development",
		"web": "METRO_VERBOSE=1 expo start --web --port 3000",
		"______ Prebuild ______": "Prebuild the app",
		"prebuild": "expo prebuild",
		"prebuild:clean": "expo prebuild --clean",
		"prebuild:ios": "expo prebuild --platform ios",
		"______ Build ______": "Build the app",
		"eas:build:dev:android": "cross-env NODE_ENV=development APP_VARIANT=development eas build --profile development --platform android",
		"eas:build:dev:simulator:android": "cross-env NODE_ENV=development APP_VARIANT=development eas build --profile development:simulator --platform android",
		"______ Others ______": "Check if the dependencies, versions are consistent",
		"check": "expo install --check",
		"check:doctor": "npx expo-doctor",
		"check:tamagui": "tama check",
		"check:upgrade": "expo install --fix",
		"clean": "react-native-clean-project"
	},
	"dependencies": {
		"@clerk/clerk-expo": "^2.10.1",
		"@clerk/types": "^4.56.0",
		"@effect/platform": "^0.80.8",
		"@expo-google-fonts/dm-sans": "^0.3.0",
		"@expo-google-fonts/literata": "^0.3.0",
		"@pacto-chat/agents-domain": "workspace:*",
		"@pacto-chat/shared-domain": "workspace:*",
		"@pacto-chat/shared-ui-core": "workspace:*",
		"@pacto-chat/shared-ui-localization": "workspace:*",
		"@pacto-chat/shared-utils-logging": "workspace:*",
		"@react-native-async-storage/async-storage": "1.23.1",
		"@react-navigation/devtools": "^7.0.16",
		"effect": "^3.14.8",
		"expo": "~52.0.11",
		"expo-auth-session": "~6.0.3",
		"expo-constants": "~17.0.8",
		"expo-dev-client": "~5.0.20",
		"expo-font": "~13.0.1",
		"expo-linking": "~7.0.3",
		"expo-localization": "~16.0.1",
		"expo-router": "~4.0.19",
		"expo-secure-store": "~14.0.1",
		"expo-splash-screen": "~0.29.22",
		"expo-status-bar": "~2.0.1",
		"expo-system-ui": "~4.0.4",
		"expo-web-browser": "~14.0.2",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"react-hook-form": "^7.56.1",
		"react-native": "0.76.9",
		"react-native-flash-message": "^0.4.2",
		"react-native-gesture-handler": "~2.20.2",
		"react-native-reanimated": "~3.16.1",
		"react-native-safe-area-context": "4.12.0",
		"react-native-screens": "~4.4.0",
		"react-native-svg": "15.8.0",
		"react-native-web": "0.20.0",
		"tamagui": "^1.126.1"
	},
	"devDependencies": {
		"@babel/core": "^7.25.2",
		"@babel/plugin-proposal-export-namespace-from": "^7.18.9",
		"@babel/plugin-transform-class-static-block": "^7.26.0",
		"@tamagui/babel-plugin": "^1.126.1",
		"@tamagui/cli": "^1.126.1",
		"@tamagui/metro-plugin": "^1.126.1",
		"@types/react": "~18.3.12",
		"babel-plugin-module-resolver": "^5.0.2",
		"babel-plugin-transform-remove-console": "^6.9.4",
		"expo-build-properties": "~0.13.2",
		"react-native-clean-project": "^4.0.3",
		"typescript": "^5.3.3"
	}
}
